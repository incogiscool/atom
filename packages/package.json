{
  "name": "atom-nextjs",
  "version": "1.0.0",
  "description": "Build a blog in NextJS using components and Atom CMS.",
  "scripts": {
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build": "npm run build:esm && npm run build:cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/incogiscool/atom.git"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "keywords": [
    "atom",
    "nextjs",
    "cms",
    "content-management-system",
    "reactjs",
    "blog",
    "blog-engine"
  ],
  "author": "Adam El Taha",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/incogiscool/atom/issues"
  },
  "homepage": "https://github.com/incogiscool/atom#readme",
  "dependencies": {
    "axios": "^1.6.8",
    "react-icons": "^5.0.1",
    "react-markdown": "^9.0.1",
    "rehype-katex": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "sanitize-html": "^2.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.67",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.4.3"
  }
}
